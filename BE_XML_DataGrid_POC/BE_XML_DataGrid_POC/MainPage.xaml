<UserControl xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  x:Class="BE_XML_DataGrid_POC.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel x:Name="StackPanelRoot">
            <Button x:Name="btnLoadFile" Click="btnLoadFile_Click">Load file</Button>
            <sdk:DataGrid x:Name="dgDataGrid"  Height="100" Background="Aqua"   />
        </StackPanel>
    </Grid>
</UserControl>
